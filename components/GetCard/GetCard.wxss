/* components/GetCard/GetCard.wxss */
.getcard_wrap{
    width: 330rpx;
}
.icon{
    position: relative;
    width: 330rpx;
    height: 210rpx;
    border-radius: 12rpx;
    overflow: hidden;
}
.icon .icon_wrap{
    font-size: 0;
}
.icon .icon_wrap .icon_img{
    width: 330rpx;
    height: 210rpx;
}
.icon .card_text{
    position: absolute;
    width: 100%;
    height: 64rpx;
    bottom: 0;
    background: rgba(0,0,0,0.50);
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    color: #fff;
}
.icon .card_text .text{
    font-size: 28rpx;
    line-height: 28rpx;
    padding-left: 10rpx;
}

.card_desc{
    display: flex;
    margin-top: 15rpx;
}
.card_desc .title{
    flex: 1;
    font-size: 28rpx;
    line-height: 28rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.card_desc .get_btn{
    display: block;
    background: #007AFF;
    border-radius: 100px;
    font-size: 18rpx;
    line-height: 18rpx;
    padding: 6rpx 18rpx;
    color: #fff;
}